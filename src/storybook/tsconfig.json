{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "esModuleInterop": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "paths": {
            "@ulaval/modul-rich-text-editor/dist/*": [
                "../../packages/modul-rich-text-editor/src/*"
            ],
            "@ulaval/modul-components/dist/*": [
                "../../packages/modul-components/src/*"
            ],
            "@ulaval/modul-website/src/*": [
                "../modul-website/src/*"
            ]
        },
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ]
    },
    "include": [
        "../../packages/modul-components/src/**/*.ts",
        "../../packages/modul-rich-text-editor/src/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "../../packages/modul-components/src/typings.d.ts",
        "../../packages/modul-rich-text-editor/src/typings.d.ts"
    ]
}
