{
    "compilerOptions": {
        "target": "es5",
        "esModuleInterop": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ]
    }
}
